@model IEnumerable<DoAn.Models.KhachHang>

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Khách hàng</h2>
@using (Html.BeginForm("CreateKH", "NhanVien", FormMethod.Get))
            {
<button type="submit" class="btn btn-primary">
    Create New
</button>
            }
<table class="table">
    <tr>
        <th>
            Họ và tên 
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Mật khẩu
        </th>
        
      
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
          
           
            <td>
                @Html.ActionLink("Edit", "EditKH", new { id = item.id }) |
                @Html.ActionLink("Delete", "DeleteKH", new { id = item.id })
            </td>
        </tr>
    }

</table>

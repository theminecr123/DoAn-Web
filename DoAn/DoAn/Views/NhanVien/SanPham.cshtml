@model IEnumerable<DoAn.Models.SanPham>

@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Sản Phẩm</h2>

<p>
    @using (Html.BeginForm("CreateSP", "NhanVien",FormMethod.Get))
    {
        <button type="submit" class="btn btn-primary">
            Create New
        </button>
    }

</p>
<table>
    <tr>
        <th>
            STT
        </th>
        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Đơn Giá
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Số lượng trong kho
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr class="spaceUnder">
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <img src="@item.thumbnail" width="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>

            <td>
                @Html.ActionLink("Edit", "EditSP", new { id = item.id }) |
                @Html.ActionLink("Delete", "DeleteSP", new { id = item.id })
            </td>
        </tr>
    }

</table>




<style>
    th {
        text-align: center;
    }

    td {
        margin-top: 100px;
        text-align: center;
    }
</style>
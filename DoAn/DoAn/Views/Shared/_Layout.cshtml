                <div class="col-md-4 re_no">
                    <ul class="infomaco">

                        @if (Session["IDuser"] != null)
                        {
                            if (int.Parse(Session["IDuser"].ToString()) == 2)
                            {
                                <li>
                                    @if (Session["IDKH"] == null)
                                    {
                                        Response.Redirect("/KhachHang/FlatLogin");
                                    }

                                    else
                                    {
                                        using (Html.BeginForm("Info", "KhachHang", new { id = int.Parse(Session["IDKH"].ToString()) }))
                                        {
                                            <div class="container-log">
                                                <div>
                                                    <button class="log">
                                                        <i class="fa fa-user" aria-hidden="true" style="color:burlywood"></i>
                                                        @Session["Name"].ToString()

                                                    </button>

                                                </div>
                                            </div>
                                        }
                                    }

                                </li>
                                <li>
                                    @Html.ActionLink("Logout", "Logout", "KhachHang")
                                </li>



                            }
                            else
                            {
                                <li>
                                    @using (Html.BeginForm("Index", "NhanVien", FormMethod.Get))
                                    {
                                        <div class="container-log">
                                            <div>
                                                <button class="log">
                                                    <i class="fa fa-user" aria-hidden="true" style="color:burlywood"></i>
                                                    <span>@Session["Name"].ToString()</span>
                                                    <span>| @Session["RoleName"].ToString()</span>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </li>
                                <li>
                                    @Html.ActionLink("Logout", "Logout", "KhachHang")
                                </li>

                            }

                        }
                        else
                        {
                            <li>
                                @using (Html.BeginForm("FlatLogin", "KhachHang"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="container-log">
                                        <div>
                                            <button class="log">
                                                <i class="fa fa-user" aria-hidden="true" style="color:burlywood"></i>
                                            </button>
                                        </div>
                                    </div>

                                }
                            </li>
                        }


                        <li><i class="fa fa-phone" aria-hidden="true"></i> +01 1234567890</li>
                        <li><a href="mailto:bill.ricie@gmail.com"><i class="fa fa-envelope-o" aria-hidden="true"></i> bill.ricie@gmail.com</a></li>
                    </ul>
